@model ComuniGamesWeb.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "ComuniGames - Troca de Senha";
}

<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <h3 class="widget-title">Troca de Senha</h3>
        if (Request.IsAuthenticated)
        {
        <div>
            <div class="">
                Senha Antiga:
                @Html.PasswordFor(w => w.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="">
                Nova Senha
                @Html.PasswordFor(w => w.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>
            <div class="">
                Confirmar nova senha
                @Html.PasswordFor(w => w.ConfirmNewPassword)
                @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
            </div>
            <div>

                @ViewBag.Msg

            </div>
        </div>
        <div>
           
            <input id="btnSalvar" class="button green small" type="submit" title="Salvar Alterações" value="Salvar Alterações" />
        </div>
        }
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

